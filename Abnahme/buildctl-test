podTemplate(containers: [
    containerTemplate(name: 'maven', image: 'maven:3.8.1-jdk-8', command: 'sleep', args: '99d'),
    containerTemplate(name: 'buildkit', image: 'jw-cloud.org:18443/jw-jenkinsbuilder', command: 'sleep', args: '99d')
  ]) {

    node(POD_LABEL) {
        stage('Get a Maven project') {
            git 'https://github.com/JuergenWewer/csi-raid.git'
            container('maven') {
                stage('Build a Maven project') {
                    sh 'ls -al'
                }
            }
        }

        stage('get project') {
            git url: 'https://github.com/JuergenWewer/csi-raid.git', branch: 'master-abnahme'
            container('buildkit') {
                stage('Build docker image') {
                    sh 'whoami'
                    sh 'buildkitd &'
                    sh 'ls -al'
                    sh 'buildctl build --frontend dockerfile.v0'
                    sh '''
                    buildctl build --frontend dockerfile.v0 --local context=. --local dockerfile=. --output type=image,name=jw-cloud.org:18443/csi-raid:latest,push=false
                    '''
                }
            }
        }

    }
}