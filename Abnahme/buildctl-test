pipeline{
    agent any
    stages {
        stage('test buildctl') {
            agent any
            steps {
                script {
                   def result = sh 'curl -sSLf https://github.com/moby/buildkit/releases/download/v0.10.0/buildkit-v0.10.0.linux-amd64.tar.gz | tar -xz -C /tmp --strip-components=1'
                   }
                withCredentials([gitUsernamePassword(credentialsId: 'gitJWId', gitToolName: 'Default')]) {
                   deleteDir()
                   sh '''
                   sudo /tmp/buildkitd &
                   '''
                }
           }
        }
    }
    post {
        always {
            deleteDir()
        }
    }
}
