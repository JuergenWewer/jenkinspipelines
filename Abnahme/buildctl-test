podTemplate(yaml: '''
    apiVersion: v1
    kind: Pod
    spec:
      containers:
      - name: maven
        image: maven:3.8.1-jdk-8
        command:
        - sleep
        args:
        - 99d
      - name: buildkit
        image: jw-cloud.org:18443/jw-jenkinsbuilder:v0.0.4
        securityContext:
            privileged: true
        command:
        - sleep
        args:
        - 99d
        runAsUser:
        - 0
        runAsGroup:
        - 0
        volumeMounts:
        - name: export
          mountPath: /tmp
      volumes:
        - name: export
          persistentVolumeClaim:
            claimName: buildctl

''') {

    node(POD_LABEL) {
        stage('Get a Maven project') {
            git 'https://github.com/JuergenWewer/csi-raid.git'
            container('maven') {
                stage('Build a Maven project') {
                    sh 'ls -al'
                }
            }
        }

        stage('get project') {
            git url: 'https://github.com/JuergenWewer/csi-raid.git', branch: 'master-abnahme'
            container('buildkit') {
                stage('Build docker image') {
                    sh 'whoami'
                    sh 'pwd'
                    sh 'runc'
                    //# sh 'systemctl restart containerd'
                    //# sh 'systemctl status containerd'
                    sh 'buildkitd &'
                    sh 'ls -al'
                    sh 'buildctl build --frontend dockerfile.v0 --local context=. --local dockerfile=.'
                }
            }
        }

    }
}