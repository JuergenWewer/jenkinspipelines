podTemplate(yaml: '''
    apiVersion: v1
    kind: Pod
    spec:
      containers:
      - name: maven
        image: maven:3.8.1-jdk-8
        command:
        - sleep
        args:
        - 99d
      - name: buildkit
        image: jw-cloud.org:18443/jw-jenkinsbuilder:v0.0.8
        securityContext:
            privileged: true
        env:
        - name: DOCKER_CONFIG
          value: .
        command:
        - sleep
        args:
        - 99d
        runAsUser:
        - 0
        runAsGroup:
        - 0
        volumeMounts:
        - name: export
          mountPath: /tmp
      volumes:
        - name: export
          persistentVolumeClaim:
            claimName: buildctl

''') {

    node(POD_LABEL) {
        stage('build the docker image') {
            git url: 'https://github.com/JuergenWewer/csi-raid.git', branch: 'master-abnahme'
            container('buildkit') {
                stage('Build docker image') {
                    //sh 'whoami'
                    //sh 'pwd'
                    //sh 'runc'
                    //sh 'systemctl restart containerd'
                    //sh 'systemctl status containerd'
                    sh 'buildkitd &'
                    //sh 'ls -al'
                    sh 'go version'
                    sh '''
                    mkdir -p bin
                    pwd
                    ls -al
                    cd cmd/csi-raid
                    pwd
                    ls -al
                    REV=$(shell git describe --long --tags --match='v*' --dirty 2>/dev/null || git rev-list -n1 HEAD)
                    echo $REV
                    IMPORTPATH_LDFLAGS=" -X main.version=$REV"
                    echo $IMPORTPATH_LDFLAGS
                    EXT_LDFLAGS=' -extldflags "-static"'
                    LDFLAGS=
                    FULL_LDFLAGS= $LDFLAGS $IMPORTPATH_LDFLAGS $EXT_LDFLAGS
                    CGO_ENABLED=0
                    GOOS=linux
                    GOARCH=amd64
                    CGO_ENABLED=0 go build -a -ldflags '$(FULL_LDFLAGS)'  -o ../../bin/csi-raid .
                    GOARCH=arm
                    CGO_ENABLED=0 go build -a -ldflags ' -X main.version=ac7e2a9d6c50cd1ad6a0cf72ff17a936fefd34d1 -extldflags "-static"'  -o ../../bin/csi-raid-arm .
                    GOARCH=arm64
                    CGO_ENABLED=0 go build -a -ldflags ' -X main.version=ac7e2a9d6c50cd1ad6a0cf72ff17a936fefd34d1 -extldflags "-static"'  -o ../../bin/csi-raid-arm64 .
                    GOARCH=ppc64le
                    CGO_ENABLED=0 go build -a -ldflags ' -X main.version=ac7e2a9d6c50cd1ad6a0cf72ff17a936fefd34d1 -extldflags "-static"'  -o ../../bin/csi-raid-ppc64le .
                    GOARCH=s390x
                    CGO_ENABLED=0 go build -a -ldflags ' -X main.version=ac7e2a9d6c50cd1ad6a0cf72ff17a936fefd34d1 -extldflags "-static"'  -o ../../bin/csi-raid-s390x .
                    ls -al ../../bin
                    '''
                    sh  '''
                    pwd
                    ls -al
                    ./buildctl.sh
                    rm -r ./bin
                    '''
                }
            }
        }
        stage('push Repo to deployment Repo') {
            container('maven') {
                stage('git checkout and push') {
                    withCredentials([gitUsernamePassword(credentialsId: 'gitJWId', gitToolName: 'Default')]) {
                       deleteDir()
                       sh '''
                       git config --global user.email "juergen.wewer@gmail.com"
                       git config --global user.name "jenkins"
                       git clone https://github.com/JuergenWewer/deploy-abnahme.git
                       ls -al
                       cd deploy-abnahme
                       git remote add rack_remote https://github.com/JuergenWewer/csi-raid.git
                       git show-ref
                       pwd
                       ls
                       git fetch rack_remote --no-tags
                       git checkout -b rack_branch rack_remote/master-abnahme
                       ls
                       git checkout master
                       ls
                       rm -f -r csi-raid
                       git add .
                       git commit -m "remove csi-raid" --allow-empty
                       git push
                       git checkout master
                       ls
                       git read-tree --prefix=csi-raid/ -u rack_branch
                       git checkout rack_branch
                       git checkout master
                       git commit -m "merged subtree"
                       git push
                       '''
                    }
                }
            }
        }
    }
}